@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Lista pracowników";
}


<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Id)</th>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <th>@Html.DisplayNameFor(model => model.Address)</th>
        <th>Actions</th>
    </tr>
    <tr></tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id}, new {@class="btn btn-secondary" })
                @Html.ActionLink("Edit", "Edit", new { id = item.Id}, new {@class="btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id}, new {@class="btn btn-danger" })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Add Person", "Create", "Person", new {id = Model.Count() + 1}, htmlAttributes: new {@class="btn btn-primary" })
</p>