@model Employee

@{
    ViewData["Title"] = "Create";
}

<h2>Add Employee</h2>

@using (Html.BeginForm("CreateConfirmed", "Home"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.HiddenFor(model => model.Id)
        <h4>Create employee</h4>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">@Html.LabelFor(model => model.Name, htmlAttributes: new {@class="control-label col-md-2"})</span>
        </div>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new {@class = "form-control"} })
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">@Html.LabelFor(model => model.Email, htmlAttributes: new {@class="control-label col-md-2"})</span>
        </div>
        @Html.EditorFor(model => model.Email, new { htmlAttributes = new {@class = "form-control"} })
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroup-sizing-default">@Html.LabelFor(model => model.Address, htmlAttributes: new {@class="control-label col-md-2"})</span>
        </div>
        @Html.EditorFor(model => model.Address, new { htmlAttributes = new {@class = "form-control"} })
    </div>

    <div class="form-group">
        <div class="col-md-11">
            <input type="submit" value="Add" class="btn btn-danger" />

            @Html.ActionLink("Back to list", "Index", "Index", htmlAttributes: new {@class="btn btn-primary" })
        </div>

    </div>
}


