@model Student

@{
    ViewData["Title"] = "Student Form";
}
<h1>@ViewData["Title"]</h1>

<form asp-controller="Student" asp-action="Index" method="post">
    <div class="row">
        <div class="col-lg-4">Name</div>
        <div class="col-lg-8">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">E-mail</div>
        <div class="col-lg-8">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">Country</div>
        <div class="col-lg-8">
            <select asp-for="Country" asp-items="Model.Countries" class="form-control"></select>
        </div>
    </div>
    <div class="col-lg-4"></div>
        <div class="col-5">
        <div class="btn-group dropright">
            <button type="submit" class="btn btn-secondary">
                Zapisz
            </button>
            <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="sr-only"></span>
            </button>
            <div class="dropdown-menu">
                <button class="dropdown-item" type="reset">Reset</button>
            </div>
        </div>
   </div>


</form>

